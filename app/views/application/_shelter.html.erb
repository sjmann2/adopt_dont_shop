<h1>All Shelters</h1>

<%= button_to "Sort by number of pets", "/shelters?sort=pet_count", method: :get, local: :true %>

<%= form_with url: "/shelters", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>Shelter Name </th>
      <th>Created at: </th>
    </tr>
  </thead>
  
<tbody>
  <% @shelters.each do |shelter| %>
    <div id="shelter-<%= shelter.id %>">
      <tr>
        <td><%= shelter.name %></td>
        <td>Created at: <%= shelter.created_at %></td>
      </tr>
      <tr>
        <td><%= link_to "Update #{shelter.name}", "/shelters/#{shelter.id}/edit" %></tr>
      </td>
      <tr>
        <td><%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %></td>
      </tr>
      <% end %>
    </div>
  </tr>
</tbody>