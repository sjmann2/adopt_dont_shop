<h1><%= @application.name%>'s Application</h1>

<h2>Status: <%= @application.status %></h2>

<h3>Address: 
<%= @application.street_address %>,
<%= @application.city %>, 
<%= @application.state %>, 
<%= @application.zipcode %></h3>

<p> Why I would make a good home for this pet: </p>
<p><%= @application.description %> </p>

<p>Pet(s) Applying for: </p>
<% @application.pets.each do |pet|%>
  <p><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></p>
<%end%>
<br>

<div id="description">

  <% if @application.pets.size >= 1 && @application.status == "In Progress" %>
    <%= render partial: 'form', locals: { path: "/applications/#{@application.id}/update",
                                          method: :patch,
                                          label: :description, 
                                          text: "Please describe why you would make a good home for this pet",
                                          button_text: 'Submit application'} %>
  <% end %>
  </div>

  <div id="search">
  <% if @application.status == "In Progress" %>
  
    <h3>Add a Pet to this Application</h3>

    <%= render partial: 'form', locals: { path: "/applications/#{@application.id}",
                                          method: :get,
                                          label: :search,
                                          text: 'Search for Pets',
                                          button_text: 'Search for Pet' }%>
    <% end %>
    </div>

  <div id="adoption">
  <% if @pets != nil %>
    <% @pets.each do |pet|%>
    <div id= "pet_<%=pet.id%>">
      <p><%= link_to "#{pet.name}", "/applications/#{pet}" %></p>
      <%=button_to "Adopt this Pet", "/pet_applications/#{@application.id}/#{pet.id}", local: true, method: :post %>
    <% end %>
  <% end %>
  </div>
