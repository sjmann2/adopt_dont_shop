<h1><%= @application.name%>'s Application</h1>

<h2>Status: <%= @application.status %></h2>

<h3>Address: <%= @application.street_address %>, <%= @application.city %>, <%= @application.state %>, <%= @application.zipcode %></h3>

<p> Why I would make a good home for this pet:
<br>
<%= @application.description %> </p>

<p>Pet(s) Applying for: </p>
<% @application.pets.each do |pet|%>
  <p><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></p>
<%end%>
<br>

<div id="description">

  <% if @application.pets.size >= 1 && @application.status == "In Progress" %>
    <%= form_with url: "/applications/#{@application.id}/update", method: :patch, local: true do |form| %>
    <%= form.label :description, "Please describe why you would make a good home for this pet" %>
    <br>
    <br>
    <%= form.text_field :description %>
    <%= form.submit "Submit application" %>
    <% end %>
  <% end %>
</div>

  <div id="search">
  <% if @application.status == "In Progress" %>
  
    <h3>Add a Pet to this Application</h3>

    <%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |form| %>
      <%= form.label :search %>
      <%= form.text_field :search %>
      <%= form.submit "Search for Pet" %>
    <% end %>
  <% end %>
  </div>

  <div id="adoption">
  <% if @pets != nil %>
    <% @pets.each do |pet|%>
    <div id= "pet_<%=pet.id%>">
      <p><%= link_to "#{pet.name}", "/applications/#{pet}" %></p>
      <%=button_to "Adopt this Pet", "/pet_applications/#{@application.id}/#{pet.id}", local: true, method: :post %>
    <% end %>
  <% end %>
  </div>
