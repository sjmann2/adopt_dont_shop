<h1>All pets</h1>

<%= link_to "Start an Application", "/applications/new" %>
<br>
<br>
<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th> Name </th>
      <th> Age </th>
      <th> Breed </th>
      <th> Adoptable </th>
      <th> Edit/Delete </th>
    </tr>
  </thead>

  <tbody>

    <% @pets.each do |pet| %>
    <tr>
      <td><%= pet.name %></td>
    
      <td><%= pet.age %></td>
    
      <td><%= pet.breed %></td>
  
      <td><%= pet.adoptable %> </td>
      <td><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %>
      <br>
      <%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %></td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <td>You can find <%= pet.name %> at <%= pet.shelter_name %>!</td>
    <% end %>
    </tr>
  </tfoot>
</table>
